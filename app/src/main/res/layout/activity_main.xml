<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/trafficLight"
        android:layout_width="288dp"
        android:layout_height="530dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:background="@color/darkGrey"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/RedLightNone"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp"
            tools:ignore="ExtraText" />

        <ImageView
            android:id="@+id/OrangeLightNone"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp" />

        <ImageView
            android:id="@+id/GreenLightNone"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/trafficLightColor"
        android:layout_width="288dp"
        android:layout_height="530dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/RedLight"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_red"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp"
            tools:ignore="ExtraText"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/OrangeLight"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_orange"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/GreenLight"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_green"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trafficLightColor3"
        android:layout_width="288dp"
        android:layout_height="530dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/RedLight3"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_red"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp"
            tools:ignore="ExtraText"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/OrangeLightGreen"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_orange"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/GreenLight3"
            android:layout_width="150dp"
            android:layout_height="144dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_green"
            android:paddingStart="80dp"
            android:paddingTop="20dp"
            android:paddingEnd="80dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"/>
    </LinearLayout>



    <Button
        android:onClick="SwitchClick"
        android:id="@+id/buttonSwitch"
        android:layout_width="236dp"
        android:layout_height="71dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/darkGrey"
        android:text="@string/buttonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trafficLight" />


</androidx.constraintlayout.widget.ConstraintLayout>